root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[**.php]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[Jenkinsfile]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[**.json]
indent_style = space
indent_size = 4

[**.{yml,yaml}]
indent_style = space
indent_size = 2
